// Este é o bloco que diz ao Prisma como gerar o cliente que usaremos no nosso código.
generator client {
  provider = "prisma-client-js"
}

// Este bloco diz ao Prisma qual banco de dados usar.
datasource db {
  provider = "postgresql"
  // A mágica acontece aqui: ele lê o "segredo" que guardamos no arquivo .env
  url      = env("DATABASE_URL")
}

// Nosso primeiro modelo! A nossa "tabela" de usuários.
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Modelo para a nossa tabela de Jogos
model Game {
  id          Int      @id @default(autoincrement())
  title       String
  platform    String
  releaseDate DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}